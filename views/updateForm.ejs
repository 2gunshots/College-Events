<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Event</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
</head>
<body id="eventForm">
    <% events.forEach(event => { %>
    <div class="close-btn-form">
        <a href="http://localhost:3000/event?id=<%= event.id %>">
            <img src="/close.svg" alt="close btn" height="20px", width="20px">
        </a>
    </div>
    <h1>Update Event</h1>
    <div class="container">

        <form id="eventForm" action="http://localhost:3000/update" method="post">
            <div class="gridContainer">
                <div class="first item">
                    <div>
                        <label for="title">Title:</label><br>
                        <input type="text" id="title" name="title" value="<%= event.title %>" required><br>
                    </div>
                    <div>
                        <label for="department">Department:</label><br>
                        <!-- <input list="department" id="department" name="department" /><br> -->
                        <select id="department" name="department" >
                            <option value="College Level">No Department(College Level)</option>
                            <option value="Chemical">Chemical</option>
                            <option value="Civil">Civil</option>
                            <option value="Computer">Computer</option>
                            <option value="Electrical">Electrical</option>
                            <option value="ENTC">ENTC</option>
                            <option value="Mechanical">Mechanical</option>
                            <option value="Production">Production</option>
                        </select>
                    </div>
                    <div>
                        <label for="venue">Venue:</label><br>
                    <input type="text" id="venue" name="venue" value="<%= event.venue %>"><br>
                    </div>
                    <div>
                        <label for="coordinator">Coordinator:</label><br>
                    <input type="text" id="coordinator" name="coordinator" value="<%= event.coordinator %>"><br>
                    </div>
                    <div>
                        <label for="date">Date:</label><br>
                        <input type="date" id="date" name="date" value="<%= event.date.toISOString().slice(0, 10) %>"><br><br>
                    </div>
                </div>

                <div class="second item">
                    <label for="info">Info:</label><br>
                    <textarea id="info" rows="4" name="information" placeholder="Write your event information here..." ><%= event.info %></textarea><br>
                </div>

                <input type="hidden" id="id" name="id" value="<%= event.id %>">



            </div>
            <div class="buttonFlex">
                <button type="Update">Update</button>
            </div>
        </form>

        <script>
            const defaultDepartment = "<%= event.department %>";
            const departmentSelect = document.getElementById("department");

            // Loop through each option in the select element
            for (let option of departmentSelect.options) {
                // If the value of the option matches the default value, set it as selected
                if (option.value === defaultDepartment) {
                    option.selected = true;
                    break; // Stop the loop since we found the matching option
                }
            }
        </script>

    <% }) %>

    </div>


    <script src="index.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

</body>
</html>