<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <!-- nav bar start -->
    <nav class="navbar navbar-expand-lg ">
        <div class="container-fluid">
          <a class="navbar-brand" href="http://localhost:3000/"><img src="/aissms.svg" alt="AISSMSCOE Logo"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

              <li class="nav-item dropdown">
                <a class="nav-link active dropdown-toggle" aria-current="page" href="#" data-bs-toggle="dropdown" aria-expanded="false" onclick="bold()">DEPARTMENT</a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="http://localhost:3000/department?department=Chemical">Chemical</a></li>
                  <li><a class="dropdown-item" href="http://localhost:3000/department?department=Civil">Civil</a></li>
                  <li><a class="dropdown-item" href="http://localhost:3000/department?department=Computer">Computer</a></li>
                  <li><a class="dropdown-item" href="http://localhost:3000/department?department=Electrical">Electrical</a></li>
                  <li><a class="dropdown-item" href="http://localhost:3000/department?department=ENTC">ENTC</a></li>
                  <li><a class="dropdown-item" href="http://localhost:3000/department?department=Mechanical">Mechanical</a></li>
                  <li><a class="dropdown-item" href="http://localhost:3000/department?department=Production">Production</a></li>
                </ul>
                </li>

              <li class="nav-item ">
                <a class="nav-link active " href="http://localhost:3000/department?department=College Level" onclick="bold()">COLLEGE LEVEL</a>
              </li>

              <li class="nav-item ">
                <a class="nav-link active " href="http://localhost:3000/history" onclick="bold()">HISTORY</a>
              </li>

              <li class="nav-item createEvent">
                <a class="nav-link active " href="http://localhost:3000/eventform" onclick="bold()">CREATE EVENT</a>
              </li>

            </ul>
          </div>
          <a href="http://localhost:3000/logout"><button class="logout-btn">Logout</button></a>
        </div>
      </nav>
      <!-- nav bar end -->

      <div class="album py-5 body">
        <div class="container">

          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 new-gutter">
            <% events.forEach(event => { %>
              <div class="col">
                <a class="card shadow-sm" id="<%= event.id %>" href="http://localhost:3000/event?id=<%=event.id%>" onclick="eventPage( event.id )">
                  <div class="img-container">
                    <img src= "/images/<%= event.department %>.jpg"  class="bd-placeholder-img card-img-top card-image" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <div class="text-container">
                      <h4><%= event.title %></h4>
                      <h6><%= event.department %></h6>
                    </div>

                  </div>
                    <rect width="100%" height="100%" fill="#c5c5c5"></rect>
                    <!-- <text x="50%" y="50%" fill="#151515" dy=".3em">Thumbnail</text> -->
                <!-- </img> -->
                  <div class="card-body">
                    <!-- <p class="card-text"><%#= event.info %></p> -->
                    <p class="card-text">
                      <% if (event.info.length > 64) { %>
                        <%= event.info.substring(0, 64) + '...' %>
                      <% } else { %>
                        <%= event.info %>
                      <% } %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <%= event.venue %>
                      </div>
                      <small class="text-body-secondary"><%= event.date.toDateString() %></small>
                    </div>
                  </div>
                </a>
              </div>

            <% }) %>


        </div>
    </div>
  </div>

  <div class="footer">
    <div class="container">
      <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
          <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Home</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Features</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Pricing</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">FAQs</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">About</a></li>
        </ul>
        <p class="text-center text-body-secondary">Â© 2024 MegaMeth, Inc</p>
      </footer>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="index.js"></script>
</body>
</html>