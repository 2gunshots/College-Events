<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
</head>
<body id="eventPage">
    <% events.forEach(event => { %>

        <div class="eventContainer">
            <div class="close-btn">
                <a href="http://localhost:3000/">
                    <img src="/close.png" alt="close btn" height="40px", width="40px">
                </a>
            </div>
            <h1><%= event.title %></h1>

            <div class="mid-flex">
                <small><%= event.department %></small>
            </div>

            <div class="mid-what">
                <h5>Venue</h5>
                <h5>Date</h5>
            </div>
            <div class="mid-bar">
                <h6><%= event.venue %></h6>
                <h6><%= event.date.toDateString() %></h6>
            </div>
            <hr>

            <pre><%= event.info %></pre>
        </div>

    <% }) %>
    <% events.forEach(event => { %>
        <div class="crud">
            <a class="update-btn" href="http://localhost:3000/update?id=<%= event.id %>">Update</a>
            <a href="http://localhost:3000/delete?id=<%= event.id %>">Delete</a>
        </div>
    <% }) %>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="index.js"></script>
</body>
</html>